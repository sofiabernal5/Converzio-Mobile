{
  "expo": {
    "name": "ConverzioIOS",
    "slug": "converzio-ios",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "converzio",
    "platforms": ["ios", "android", "web"],
    "plugins": ["expo-router"],
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    // Remove or comment out splash configuration temporarily
    // "splash": {
    //   "image": "./assets/splash.png",
    //   "resizeMode": "contain",
    //   "backgroundColor": "#ffffff"
    // },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}